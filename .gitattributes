# Auto detect text files and perform LF normalization
* text=auto

# Ensure .gitattributes itself uses LF line endings
.gitattributes text eol=lf

# Explicitly declare binary files to prevent line ending conversion
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.zip binary
*.tar binary
*.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
